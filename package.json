{
  "name": "wulu-anime-platform",
  "version": "1.0.0",
  "description": "Professional anime streaming and manga reading platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build",
    "deploy": "npm run export && echo 'wulu-anime-platform.github.io' > out/CNAME && touch out/.nojekyll",
    "predeploy": "npm run export",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "cross-env ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "next-auth": "^4.24.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0",
    "stripe": "^14.7.0",
    "wagmi": "^1.4.0",
    "viem": "^1.19.0",
    "@rainbow-me/rainbowkit": "^1.3.0",
    "framer-motion": "^10.16.0",
    "react-hook-form": "^7.47.0",
    "@hookform/resolvers": "^3.3.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0",
    "socket.io-client": "^4.7.0",
    "react-quill": "^2.0.0",
    "quill": "^1.3.7",
    "react-intersection-observer": "^9.5.0",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "class-variance-authority": "^0.7.0",
    "tailwind-merge": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.6",
    "jose": "^5.1.0",
    "iron-session": "^8.0.0",
    "react-hot-toast": "^2.4.0",
    "react-dropzone": "^14.2.0",
    "sharp": "^0.32.0",
    "hls.js": "^1.4.0",
    "plyr": "^3.7.0",
    "react-plyr": "^2.2.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "@tailwindcss/typography": "^0.5.0",
    "@tailwindcss/forms": "^0.5.0",
    "tsx": "^4.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
